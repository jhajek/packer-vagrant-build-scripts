{
  "builders": [
    {
      "name": "ubuntu-20.04-live-server",
      "vm_name": "ubuntu-20.04-live-server",
      "type": "virtualbox-iso",
      "boot_command": [
        "<enter><enter><f6><esc><wait> ",
        "autoinstall ds=nocloud-net;seedfrom=http://{{ .HTTPIP }}:{{ .HTTPPort }}/",
        "<enter><wait>"
      ],
      "http_directory": "subiquity/http",
      "boot_wait": "5s",
      "disk_size": 10000,
      "guest_os_type": "Ubuntu_64",
      "http_port_min" : 9001,
      "http_port_max" : 9050,
      "iso_urls": [
        "http://releases.ubuntu.com/20.04/ubuntu-20.04.2-live-server-amd64.iso"
      ],
      "iso_checksum": "sha256:d1f2bf834bbe9bb43faf16f9be992a6f3935e65be0edece1dee2aa6eb1767423",
      "ssh_username": "ubuntu",
      "ssh_password": "ubuntu",
      "ssh_timeout": "20m",
      "ssh_handshake_attempts": "20",
      "ssh_port": 22,
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
      "guest_additions_mode": "disable",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ]
      ]
      }],
      
  "provisioners": [
  {
    "type": "shell",
  "execute_command" : "echo 'vagrant' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'", 
    "script": "../scripts/post_install_vagrant.sh"
  }
],
  "post-processors": [
 {
  "type": "vagrant",
 "keep_input_artifact": false,
 "output": "../build/{{.BuildName}}-{{.Provider}}-{{timestamp}}.box"  
 }
]
}

